-- 数据库初始化脚本

-- 创建数据库
CREATE DATABASE iclsi;
-- 使用数据库
USE iclsi;

-- 删除表(忽略外键约束)
SET FOREIGN_KEY_CHECKS = 0;
DROP TABLE IF EXISTS user;
DROP TABLE IF EXISTS clock;
DROP TABLE IF EXISTS user_clock;
SET FOREIGN_KEY_CHECKS = 1;

-- 创建用户表
CREATE TABLE user(
  user_id BIGINT NOT NULL AUTO_INCREMENT,
  name VARCHAR(20),
  password VARCHAR(32),
  phone_number VARCHAR(32),
  email VARCHAR(32),
  PRIMARY KEY (user_id)
);

-- 创建云锁表
CREATE TABLE clock(
  clock_id BIGINT NOT NULL AUTO_INCREMENT,
  name VARCHAR(20),
  password VARCHAR(32),
  state TINYINT COMMENT '云锁状态：0 = 云锁关(close)，1 = 云锁开(open)',
  PRIMARY KEY (clock_id)
);

-- 创建用户-云锁表
CREATE TABLE user_clock(
  user_clock_id BIGINT NOT NULL AUTO_INCREMENT,
  user_id BIGINT NOT NULL,
  clock_id BIGINT NOT NULL,
  authority TINYINT COMMENT '权限信息：0 = 管理员，1 = 普通用户',
  PRIMARY KEY (user_clock_id),
  FOREIGN KEY (user_id) REFERENCES user(user_id),
  FOREIGN KEY (clock_id) REFERENCES clock(clock_id)
);